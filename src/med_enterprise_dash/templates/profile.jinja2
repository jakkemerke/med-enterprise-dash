{% extends "base.jinja2" %}

{% block title %} {{ branding }} | {{ name }} {% endblock %}

{% block head %}
{{ super() }}
{% endblock %}

{% block body %}
{% include "header.jinja2" %}

<section class="mfws">
    <h1>{{ name }}: {{username}}</h1>
    <p>Stub for user profile information.</p>


    <h1>Apps</h1>


    {% if apps %}
    <p>Your account has access to the following:</p>
    <ul>
        {% for app in apps %}
        <li><a href="{{ app.route }}" style="background: black;">{{ app.name }}</a></li>
        {% endfor %}
    </ul>
    {% else %}
    <p>Your account has no access.</p>
    {% endif %}


</section>

{% include "footer.jinja2" %}
{% endblock %}
